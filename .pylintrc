[MASTER]


disable=line-too-long,missing-module-docstring,invalid-name,too-many-arguments,
        wrong-import-order,missing-function-docstring,duplicate-code,missing-class-docstring,
        redefined-builtin,fixme,attribute-defined-outside-init,import-error

[REPORTS]

# Set the output format. Available formats are text, parseable, colorized, msvs
# (visual studio) and html. You can also give a reporter class, eg
# mypackage.mymodule.MyReporterClass.
output-format=colorized

[FORMAT]

# Maximum number of characters on a single line.
max-line-length=120

[TYPECHECK]
signature-mutators=click.decorators.option
